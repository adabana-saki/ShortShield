{
  "name": "shortshield",
  "displayName": "ShortShield",
  "version": "0.1.1",
  "description": "Block short-form videos and reclaim your focus. Comprehensive productivity toolkit with Focus Mode, Pomodoro Timer, Time Limits, and more.",
  "type": "module",
  "private": true,
  "author": "Adabana Saki <yuuto819midorimatu@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/adabana-saki/ShortShield#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/adabana-saki/ShortShield.git"
  },
  "bugs": {
    "url": "https://github.com/adabana-saki/ShortShield/issues"
  },
  "keywords": [
    "browser-extension",
    "productivity",
    "focus",
    "youtube-shorts",
    "tiktok",
    "instagram-reels",
    "content-blocker",
    "pomodoro",
    "time-tracking",
    "habit-tracking",
    "distraction-blocker",
    "chrome-extension",
    "firefox-addon",
    "edge-extension"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:chrome": "cross-env BROWSER=chrome vite build",
    "build:firefox": "cross-env BROWSER=firefox vite build",
    "build:edge": "cross-env BROWSER=edge vite build",
    "build:all": "pnpm build:chrome && pnpm build:firefox && pnpm build:edge",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "i18n:check": "tsx scripts/i18n-check.ts",
    "i18n:extract": "tsx scripts/i18n-extract.ts",
    "manifest:sync": "tsx scripts/manifest-transform.ts sync",
    "manifest:to-firefox": "tsx scripts/manifest-transform.ts to-firefox",
    "manifest:to-chrome": "tsx scripts/manifest-transform.ts to-chrome",
    "manifest:validate": "tsx scripts/manifest-transform.ts validate",
    "icons:generate": "tsx scripts/generate-icons.ts",
    "prepare": "husky",
    "release": "pnpm build:all && pnpm test:unit",
    "audit:security": "pnpm audit --audit-level=moderate"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@playwright/test": "^1.48.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/webextension-polyfill": "^0.12.1",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.5",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.6",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
